{
  "name": "nhnghia",
  "author": {
    "name": "nhnghia",
    "email": "nhnghia.dev@gmail.com",
    "url": "https://nhnghia.dev/"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.14.1",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^8.56.0",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "turbo": "^1.12.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "prepare": "mkdir -p .turbo/cookies && husky",
    "format": "prettier --write .",
    "clear-turbo-cookies": "rm -rf ./.turbo/cookies/*.cookie",
    "type-check": "turbo type-check --log-order=grouped",
    "lint": "turbo lint --log-order=grouped",
    "build": "turbo build --log-order=grouped",
    "build-portfoblogio": "turbo build --filter=portfoblogio --log-order=grouped",
    "start-portfoblogio": "turbo start --filter=portfoblogio",
    "dev-portfoblogio": "turbo dev --filter=portfoblogio",
    "graph-portfoblogio": "turbo build --filter=portfoblogio --graph=_portfoblogio.graph.html"
  }
}

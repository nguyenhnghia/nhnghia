{
  "version": "0.2.0",
  "inputs": [
    {
      "id": "selectProject",
      "type": "pickString",
      "description": "Select project",
      "options": ["portfoblogio"]
    },
    {
      "id": "selectEnvironment",
      "type": "pickString",
      "description": "Select environment",
      "options": ["development", "production"]
    }
  ],
  "configurations": [
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200"
    },
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npx nx run ${input:selectProject}:serve:${input:selectEnvironment}"
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "npx nx run ${input:selectProject}:serve:${input:selectEnvironment}",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}

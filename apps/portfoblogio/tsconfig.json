{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "@components": ["./src/components/index.ts"],
      "@components/*": ["./src/components/*"],
      "@component-registers": ["./src/component-registers/index.ts"],
      "@component-registers/*": ["./src/component-registers/*"],
      "@utils/*": ["./src/utils/*"],
    },
  },
  "include": [".next/types/**/*.ts", "**/*.ts", "**/*.tsx", "next-env.d.ts"],
}
